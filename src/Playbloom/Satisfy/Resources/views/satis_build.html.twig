{% extends "base.html.twig" %}

{% block title %}Satis build{% endblock %}

{% block content %}
    <pre id="satisOutput"></pre>
{% endblock %}

{% block javascript %}
    <script type="text/javascript">
    $(function(){
        var output = $("#satisOutput");
        {% if repositoryId %}
            var outputSource = new EventSource("{{ path('satis_build_repository_run', {'repositoryId': repositoryId }) }}");
        {% else %}
            var outputSource = new EventSource("{{ path('satis_build_run') }}");
        {% endif %}
        outputSource.onmessage = function(event){
            if (event.data == '__done__') {
                outputSource.close();
                return;
            }
            output
                .append(event.data)
                .append("\n");
        };
    });
    </script>
{% endblock %}
